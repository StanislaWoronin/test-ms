{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/test-ms-v2/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/test-ms-v2/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/test-ms-v2",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "api-getaway": {
      "type": "application",
      "root": "apps/api-getaway",
      "entryFile": "main",
      "sourceRoot": "apps/api-getaway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-getaway/tsconfig.app.json"
      }
    },
    "blogs": {
      "type": "application",
      "root": "apps/blogs",
      "entryFile": "main",
      "sourceRoot": "apps/blogs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/blogs/tsconfig.app.json"
      }
    }
  }
}